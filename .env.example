# GitWrite Development Environment Configuration
# Copy this file to .env and customize as needed

# Environment
GITWRITE_ENV=development

# API Configuration
API_PORT=8000
GITWRITE_API_HOST=0.0.0.0
GITWRITE_API_PORT=8000
GITWRITE_SECRET_KEY=dev-secret-key-change-in-production-12345

# Frontend Configuration
WEB_PORT=3000
WEB_DEV_PORT=3001
VITE_API_URL=http://localhost:8000

# Data Storage
GITWRITE_REPO_PATH=/app/data/repositories
GITWRITE_EXPORT_PATH=/app/data/exports

# Logging
GITWRITE_LOG_LEVEL=debug

# Database Configuration (optional - for production scaling)
POSTGRES_DB=gitwrite
POSTGRES_USER=gitwrite
POSTGRES_PASSWORD=gitwrite_dev_password
POSTGRES_PORT=5432

# Redis Configuration (optional - for production scaling)
REDIS_PORT=6379

# Development Tools
GITWRITE_DEBUG=true
GITWRITE_RELOAD=true